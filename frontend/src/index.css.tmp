
/* Модальное окно логина на мобильных - ИСПРАВЛЕНО */
@media (max-width: 475px) {
  /* Принудительно делаем модальное окно на весь экран */
  .fixed.inset-0.bg-black.bg-opacity-50.backdrop-blur-sm.flex.z-50 > div {
    width: 100vw !important;
    max-width: 100vw !important;
    height: 100vh !important;
    max-height: 100vh !important;
    margin: 0 !important;
    padding: 20px !important;
    border-radius: 0 !important;
  }
}
