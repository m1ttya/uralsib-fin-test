{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "../frontend",
    "../../frontend",
    "**/*.tsx",
    "**/*.jsx",
    "**/vite.config.ts",
    "**/tailwind.config.*",
    "**/postcss.config.js"
  ]
}
